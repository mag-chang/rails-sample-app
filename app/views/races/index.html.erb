<p id="notice"><%= notice %></p>

<h4 class="mt-4 border-bottom">
大会一覧
</h4>

<table class="table table-sm table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">大会名</th>
      <th scope="col">開催日</th>
      <th scope="col">レビュー数</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.name %></td>
        <td><%= race.started_on %></td>
        <td></td>
        <td><%= link_to '詳細', race, class:'btn btn-outline-info btn-sm' %></td>
        <td><%= link_to '編集', edit_race_path(race), class:'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to '削除', race, method: :delete, data: { confirm: '削除してよろしいですか?' }, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to '大会情報登録', new_race_path, class:'btn btn-outline-dark btn-sm' %>
<% end %>